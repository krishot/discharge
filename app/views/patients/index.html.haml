- model_class = Patient
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= "Name"
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:phone)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @patients.each do |patient|
      %tr
        %td= link_to patient.name, patient_path(patient)
        %td= patient.email
        %td= patient.phone
        %td= link_to patient.condition, conditions_path(patient.condition)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_patient_path(patient), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), patient_path(patient), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_patient_path, :class => 'btn btn-primary'
