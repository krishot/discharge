- model_class = PatientTask
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:action_task_id)
      %th= model_class.human_attribute_name(:patient_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @patient_tasks.each do |patient_task|
      %tr
        %td= link_to patient_task.id, patient_task_path(patient_task)
        %td= patient_task.name
        %td= patient_task.state
        %td= patient_task.action_task_id
        %td= patient_task.patient_id
        %td=l patient_task.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_patient_task_path(patient_task), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), patient_task_path(patient_task), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_patient_task_path, :class => 'btn btn-primary'
