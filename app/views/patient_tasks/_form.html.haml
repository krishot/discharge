= form_for @patient_task, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :state, :class => 'control-label'
    .controls
      = f.text_field :state, :class => 'text_field'
  .control-group
    = f.label :action_task_id, :class => 'control-label'
    .controls
      = f.number_field :action_task_id, :class => 'number_field'
  .control-group
    = f.label :patient_id, :class => 'control-label'
    .controls
      = f.number_field :patient_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), patient_tasks_path, :class => 'btn'
