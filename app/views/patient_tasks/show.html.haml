- model_class = PatientTask
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @patient_task.name
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @patient_task.state
%p
  %strong= model_class.human_attribute_name(:action_task_id) + ':'
  %br
  = @patient_task.action_task_id
%p
  %strong= model_class.human_attribute_name(:patient_id) + ':'
  %br
  = @patient_task.patient_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), patient_tasks_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_patient_task_path(@patient_task), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), patient_task_path(@patient_task), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
