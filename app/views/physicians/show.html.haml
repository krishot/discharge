- model_class = Physician
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @physician.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @physician.last_name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @physician.email
%p
  %strong= model_class.human_attribute_name(:phone) + ':'
  %br
  = @physician.phone
%p
  %strong= model_class.human_attribute_name(:specialty) + ':'
  %br
  = @physician.specialty
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @physician.state
%p
  %strong= model_class.human_attribute_name(:patients_id) + ':'
  %br
  = @physician.patients_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), physicians_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_physician_path(@physician), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), physician_path(@physician), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
