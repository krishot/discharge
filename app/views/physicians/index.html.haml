- model_class = Physician
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:phone)
      %th= model_class.human_attribute_name(:specialty)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:patients_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @physicians.each do |physician|
      %tr
        %td= link_to physician.id, physician_path(physician)
        %td= physician.first_name
        %td= physician.last_name
        %td= physician.email
        %td= physician.phone
        %td= physician.specialty
        %td= physician.state
        %td= physician.patients_id
        %td=l physician.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_physician_path(physician), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), physician_path(physician), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_physician_path, :class => 'btn btn-primary'
