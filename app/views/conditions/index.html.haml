- model_class = Condition
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:url)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:category)
      %th= model_class.human_attribute_name(:icd9)
      %th= model_class.human_attribute_name(:action_program_id)
      %th= model_class.human_attribute_name(:offers_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @conditions.each do |condition|
      %tr
        %td= link_to condition.id, condition_path(condition)
        %td= condition.name
        %td= condition.description
        %td= condition.url
        %td= condition.state
        %td= condition.type
        %td= condition.category
        %td= condition.icd9
        %td= condition.action_program_id
        %td= condition.offers_id
        %td=l condition.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_condition_path(condition), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), condition_path(condition), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_condition_path, :class => 'btn btn-primary'
