- model_class = Condition
.page-header
  %h1              
    = link_to t('.back', :default => t("helpers.links.back")), conditions_path, :class => 'btn'  
    = @condition.name   
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_condition_path(@condition), :class => 'btn' 

%p
  %strong= model_class.human_attribute_name(:category) + ':'
  = @condition.category
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @condition.description
  = link_to "More Info", @condition.url, :target=>"_new"

%p
  %h2
    = "Programs"
    = link_to t('.new', :default => t("helpers.links.new")), new_condition_action_program_path(@condition), :class => 'btn btn-primary'
    
  %br
  =render :partial => "action_programs/listing", :locals=>{:action_programs=>@condition.action_programs, :model_class=>ActionProgram }  
  
