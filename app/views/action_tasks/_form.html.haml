= form_for @action_task, :html => { :class => 'form-horizontal' } do |f|
  -if @action_task.action_program
    = f.hidden_field :action_program_id, :value=>@action_task.action_program.id                 
  -else
    .control-group
      = f.label :action_program_id, :class => 'control-label'
      .controls
        = f.select :action_program_id, ActionProgram.all.collect { |t| [t.name, t.id]}, :prompt => "Choose Program",  :class => 'select'
                                                                                                       
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'
  .control-group
    = f.label :url, :class => 'control-label'
    .controls
      = f.text_field :url, :class => 'text_field'

  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), action_tasks_path, :class => 'btn'

-if params[:detail]    
  .control-group
    = f.label :state, :class => 'control-label'
    .controls
      = f.text_field :state, :class => 'text_field'
  .control-group
    = f.label :type, :class => 'control-label'
    .controls
      = f.text_field :type, :class => 'text_field'
      .control-group
        = f.label :category, :class => 'control-label'
        .controls
          = f.text_field :category, :class => 'text_field'
