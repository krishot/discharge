- model_class = ActionTask
.page-header
  %h1
    = link_to t('.back', :default => t("helpers.links.back")), action_tasks_path, :class => 'btn'
    = @action_task.name                                         
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_action_task_path(@action_task), :class => 'btn'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), action_task_path(@action_task), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'

.hero-unit 
  -if @action_task.action_program 
    = "This is a task for the program " 
    %strong=link_to @action_task.action_program, action_program_path(@action_task.action_program)
    = " In "            
    %strong="#{@action_task.action_program.condition}"
      
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @action_task.description
