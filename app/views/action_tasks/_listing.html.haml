%table.table.table-striped
  %thead
    %tr
      %th Program
      %th= model_class.human_attribute_name(:name)
      %th= "Frequency"
      %th= model_class.human_attribute_name(:url)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - action_tasks.each do |action_task|
      %tr
        %td= link_to action_task.action_program, action_program_path(action_task.action_program)
        %td= link_to action_task.name, action_task_path(action_task)
        %td= action_task.category
        %td
          = link_to "more info", action_task.url
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_action_task_path(action_task), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), action_task_path(action_task), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'