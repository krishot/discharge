#masonry
  - action_programs.each do |action_program|
    .item
      = image_tag(action_program.cover_url, :alt=>action_program.name, :width=>"100%") 
      .comments
        %h2= link_to action_program.name, action_program_path(action_program) 
      .info
        .infobox
          = action_program.category
          = link_to action_program.condition, condition_path(action_program.condition)
        .infobox
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_action_program_path(action_program), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), action_program_path(action_program), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'
        .infobox      
          -at_count = action_program.action_tasks.count
          -if at_count > 0
            ="#{at_count} tasks "
            -action_program.action_tasks.each do |action_task|
              =link_to action_task, action_task_path(action_task)      

