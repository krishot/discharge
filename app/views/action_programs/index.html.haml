- model_class = ActionProgram
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:category)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:therapy_id)
      %th= model_class.human_attribute_name(:condition_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @action_programs.each do |action_program|
      %tr
        %td= link_to action_program.id, action_program_path(action_program)
        %td= action_program.name
        %td= action_program.category
        %td= action_program.description
        %td= action_program.state
        %td= action_program.type
        %td= action_program.therapy_id
        %td= action_program.condition_id
        %td=l action_program.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_action_program_path(action_program), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), action_program_path(action_program), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_action_program_path, :class => 'btn btn-primary'
