= form_for @action_program, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :category, :class => 'control-label'
    .controls
      = f.select :category, ActionProgram.select_category, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'
  -if @action_program.condition 
    = f.hidden_field :condition_id, :value=>@action_program.condition_id     
  -else
    .control-group
      = f.label :condition_id, :class => 'control-label'
      .controls
        = f.select :condition_id, Condition.all.collect { |t| [t.name, t.id]}, :prompt => "Choose Condition", :class => 'select'        

  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), action_programs_path, :class => 'btn'

-if params[:detail]    
  .control-group
    = f.label :state, :class => 'control-label'
    .controls
      = f.text_field :state, :class => 'text_field'
  .control-group
    = f.label :type, :class => 'control-label'
    .controls
      = f.text_field :type, :class => 'text_field'
  